<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Hospital_Stay_Fields_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(cve__HospitalStartDate__c),OR(ISPICKVAL( Hospital_Status__c, &quot;Less than 24h (HP&lt;24h)&quot;),
ISPICKVAL( Hospital_Status__c, &quot;More than 24h (HP&gt;24h)&quot;)
))</errorConditionFormula>
    <errorDisplayField>cve__HospitalStartDate__c</errorDisplayField>
    <errorMessage>Start Date is Required when there is a hospital stay</errorMessage>
</ValidationRule>
